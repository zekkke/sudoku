<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#00181D"
                android:endColor="#00576A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF1DE9B6" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#00181D"
                android:endColor="#005D78"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF1DE9B6" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:width="200dp"
                android:height="50dp" />
        </shape>
    </item>
</selector> 