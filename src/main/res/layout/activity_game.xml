<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg"
    tools:context=".GameActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menuButton"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/menu"
            android:contentDescription="Меню"
            android:text="" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_settings_gears"
            android:contentDescription="Налаштування"
            android:text="" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/sudokuGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="9"
        android:rowCount="9">
        <!-- Кнопки для клітинок сітки будуть додані програмно -->
    </GridLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/lightningSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Режим Блискавка"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/sudokuGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/numberButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@id/lightningSwitch">
        <Button
            android:id="@+id/num1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/num2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
        <Button
            android:id="@+id/num9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/hintButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/hint"
            android:text=""
            android:contentDescription="Підказка" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/check"
            android:text=""
            android:contentDescription="Перевірити" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/checkButton"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/notesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes OFF"
            android:background="@drawable/notes"
            android:contentDescription="Notes Toggle" />

    </LinearLayout>
</LinearLayout>